
<html>
<head>
	<meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<style>


.center
{
	text-align: center;
}

</style>

<body>
	<div class="center">
		<p>
		<%= form_for @question, url: {action: "create_q"}, html: {class: "form-horizontal"}  do |f| %>
		<div class="form-group  " >
			<%= f.text_field :quest_txt, placeholder: "Write a question.." , required: true , :style => "width: 35%" %> </br>			
		</div>
		<div class="form-group  ">
			<%= f.text_field :desc, placeholder: "Write a Small Description..", :style => "width: 35%" %> </br>
		</div>
		<% if current_user %>
		<div class="form-group">
			<%= f.submit ("Post Question"), class: "btn btn-primary", :style => "width: 50% "%>
		</div>
		<div class="form-group  ">
			<%= f.text_field :user, :value =>current_user.email, :style => "width: 35%", :type => "hidden" %> </br>
		</div>
		<%else%>
			Please <%= link_to 'Login', log_in_path%>  to Post a question
		<%end%>
		<%end%>
		</p>
		<div class="form-group">
		<%= link_to "GO back to the Questions" ,"list" %>
		</div>
	</div>

</body>
</html>